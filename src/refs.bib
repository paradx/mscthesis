  file       = {:/home/landrae/repos/MasterThesis/Literatur/Sobrino2020.pdf:PDF},
  groups     = {Papers, MasterThesis},
  keywords   = {thermal remote sensing; land surface temperature; urban heat island; SLSTR; Sentinel},
  priority   = {prio1},
  publisher  = {MDPI AG},
  ranking    = {rank5},
