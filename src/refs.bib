@Article{Recondo2022,
  author    = {Recondo, Carmen and Corbea-Pérez, Alejandro and Peón, Juanjo and Pendás, Enrique and Ramos, Miguel and Calleja, Javier F. and de Pablo, Miguel Ángel and Fernández, Susana and Corrales, José Antonio},
  journal   = {Remote Sensing},
  title     = {Empirical {Models} for {Estimating} {Air} {Temperature} {Using} {MODIS} {Land} {Surface} {Temperature} (and {Spatiotemporal} {Variables}) in the {Hurd} {Peninsula} of {Livingston} {Island}, {Antarctica}, between 2000 and 2016},
