@Article{McDuffie2021,
  author    = {McDuffie, Erin E. and Martin, Randall V. and Spadaro, Joseph V. and Burnett, Richard and Smith, Steven J. and O’Rourke, Patrick and Hammer, Melanie S. and van Donkelaar, Aaron and Bindle, Liam and Shah, Viral and Jaeglé, Lyatt and Luo, Gan and Yu, Fangqun and Adeniran, Jamiu A. and Lin, Jintai and Brauer, Michael},
