  file       = {ScienceDirect Full Text PDF:https\://www.sciencedirect.com/science/article/pii/S0378778802000816/pdfft?md5=8ed038fbd8807e4aafc68851e4d751c4&pid=1-s2.0-S0378778802000816-main.pdf&isDTMRedir=Y:application/pdf},
  keywords   = {Vegetation, Microclimate, Urban block, CFD analysis},
  series     = {Special issue on urban research},
  shorttitle = {Vegetation in the urban environment},
  url        = {https://www.sciencedirect.com/science/article/pii/S0378778802000816},
